<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_index_activity"
    app:startDestination="@id/indexFragment">

    <fragment
        android:id="@+id/indexFragment"
        android:name="com.linrty.ctransaction.fragment.index.IndexFragment"
        android:label="IndexFragment" >
        <action
            android:id="@+id/action_indexFragment_to_swapFragment"
            app:destination="@id/swapFragment"
            app:enterAnim="@anim/slide_from_right_top"
            app:exitAnim="@anim/slide_to_hide"
            app:popEnterAnim="@anim/slide_to_show"
            app:popExitAnim="@anim/slide_to_right_top" />
        <action
            android:id="@+id/action_indexFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <action
            android:id="@+id/action_indexFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right" />
        <action
            android:id="@+id/action_indexFragment_to_workInfoFragment"
            app:destination="@id/workInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/swapFragment"
        android:name="com.linrty.ctransaction.fragment.swap.SwapFragment"
        android:label="SwapFragment" />
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.linrty.ctransaction.fragment.search.SearchResultFragment"
        android:label="SearchResultFragment" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.linrty.ctransaction.fragment.chat.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/workInfoFragment"
        android:name="com.linrty.ctransaction.fragment.work.WorkInfoFragment"
        android:label="WorkInfoFragment" />
</navigation>