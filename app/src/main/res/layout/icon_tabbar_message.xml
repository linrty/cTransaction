<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabbarMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/indexTabbarMessageLottie"
            android:layout_width="@dimen/index_tabbar_item_icon_size"
            android:layout_height="@dimen/index_tabbar_item_icon_size"
            app:layout_constraintBottom_toTopOf="@+id/indexTabbarMessageTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/explore" />

        <TextView
            android:id="@+id/indexTabbarMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_index_tabbar_message"
            android:textColor="@color/index_tabbar_item_title"
            android:textSize="@dimen/index_tabbar_item_title_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indexTabbarMessageLottie" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
