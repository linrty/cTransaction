<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CTransaction" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_90</item>
        <item name="colorPrimaryVariant">@color/melon</item>
        <item name="colorOnPrimary">@color/blue_10</item>
        <item name="backgroundColor">@color/blue_10</item>

        <item name="error">@color/red_300</item>
        <item name="errorDark">@color/red_400</item>
        <item name="errorDisable">@color/red_200</item>
        <item name="errorLight">@color/red_100</item>

        <item name="success">@color/green_300</item>
        <item name="successDark">@color/green_400</item>
        <item name="successDisable">@color/green_200</item>
        <item name="successLight">@color/green_100</item>

        <item name="info">@color/grey_300</item>
        <item name="infoDark">@color/grey_400</item>
        <item name="infoDisable">@color/grey_200</item>
        <item name="infoLight">@color/grey_100</item>

        <item name="warning">@color/orange_300</item>
        <item name="warningDark">@color/orange_400</item>
        <item name="warningDisable">@color/orange_200</item>
        <item name="warningLight">@color/orange_100</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null
    </style>
</resources>